<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Scoreboard</title>

    <link rel="stylesheet" href="~/css/layout.css">
    <link rel="stylesheet" href="~/css/table.css">

    <link rel="stylesheet" href="https://code.getmdl.io/1.3.0/material.grey-red.min.css" />
    <script defer src="https://code.getmdl.io/1.3.0/material.min.js"></script>
</head>
<body>

<div id="header">
    <div><p id="header-field-tour">Tour: @ViewData["Tour"]</p></div>
    <div><p id="header-field-polygon">Polygon: @ViewData["Polygon"]</p></div>
    <div><p id="header-field-category">Category: @ViewData["Category"]</p></div>
</div>

<div id="content">
    <table class="mdl-data-table">
        <thead>
            @RenderSection("THeader")
        </thead>
        
        <tbody>
            @RenderBody()
        </tbody>
    </table>
</div>

<div id="footer">
    <div>
        <p>
            @ViewData["JudgeName"]
        </p>
    </div>
    <div>
        <button id="footer-field-submitbtn" class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--raised mdl-color--green-500">
            Submit
        </button>
    </div>
</div>

</body>
</html>