<Window x:Class="DataBaseImporter.SheetIdWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        MaxHeight="85" MinHeight="85" MaxWidth="400" MinWidth="400"
        ShowInTaskbar="False" WindowStyle="ToolWindow"
        WindowStartupLocation="CenterOwner"
        Title="Введите Id таблицы" Height="85" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="75"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBox Grid.Column="0" Margin="10" Name="IdTextBox"></TextBox>
        <Button Grid.Column="1" Margin="10" Click="OkOnClick">Ок</Button>
    </Grid>
</Window>